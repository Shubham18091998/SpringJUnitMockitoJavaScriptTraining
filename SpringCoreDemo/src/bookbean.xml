<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    <context:component-scan base-package="com.cts.autowire"/>
    <bean id="author1" class="com.cts.autowire.Author">
    	<property name="id" value="10001"></property>
    	<property name="name" value="A P Pandey"></property>
    </bean>
    <bean id="javaBook" class="com.cts.autowire.Book">
    	<property name="isbn" value="ABC123"></property>
    	<property name="bookName" value="Java Complete Refrence"></property>
    	<property name="price" value="500"></property>
    </bean>
</beans>
    